{
    "name": "jakt",
    "displayName": "jakt",
    "description": "Jakt language support",
    "license": "BSD",
    "version": "0.0.3",
    "repository": {
        "type": "git",
        "url": "https://github.com/SerenityOS/jakt/tree/main/editors/vscode"
    },
    "publisher": "JT",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.67.0"
    },
    "activationEvents": [
        "onLanguage:jakt"
    ],
    "main": "out/client/src/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "jakt",
                "aliases": [
                    "Jakt"
                ],
                "extensions": [
                    ".jakt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "jakt",
                "scopeName": "source.jakt",
                "path": "./syntaxes/jakt.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Jakt",
            "properties": {
                "jaktLanguageServer.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "jaktLanguageServer.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                },
                "jaktLanguageServer.compiler.executablePath": {
                    "scope": "resource",
                    "type": "string",
                    "default": "jakt",
                    "description": "The path to the jakt compiler executable."
                },
                "jaktLanguageServer.hints.showImplicitTry": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Display implicit 'try's inserted by the compiler"
                },
                "jaktLanguageServer.hints.showInferredTypes": {
                    "scope": "resource",
                    "type": "boolean",
                    "default": true,
                    "description": "Display types inferred by the compiler"
                },
                "jaktLanguageServer.maxCompilerInvocationTime": {
                    "scope": "resource",
                    "type": "number",
                    "default": 5000,
                    "description": "The maximum time in milliseconds that the compiler is allowed to take to process a file."
                },
                "jaktLanguageServer.maxParallelCompilerProcesses": {
                    "scope": "resource",
                    "type": "number",
                    "default": 4,
                    "description": "The maximum number of compiler processes that can be launched simultaneously. Prevents the extension from creating too many jobs in a short timespan, which may freeze computers."
                },
                "jaktLanguageServer.extraCompilerImportPaths": {
                    "scope": "resource",
                    "type": "array",
                    "default": [],
                    "description": "Extra paths to search for imports when compiling files."
                }
            }
        },
        "snippets": [
            {
                "language": "jakt",
                "path": "./snippets/jakt.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run lint && npm run compile",
        "esbuild-base": "npx esbuild server/src/server.ts client/src/extension.ts --bundle --outdir=out --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run esbuild-base -- --sourcemap --minify",
        "compile": "npm run esbuild",
        "install-code-dep": "code --install-extension connor4312.esbuild-problem-matchers && code --install-extension dbaeumer.vscode-eslint",
        "install": "cd server && npm install && cd ../client && npm install && cd .. && npm run install-code-dep",
        "watch": "npm run esbuild-base -- --sourcemap --watch",
        "lint": "npx eslint ./client/src ./server/src --ext .ts,.tsx",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^9.1.0",
        "@types/node": "^16.11.7",
        "@types/tmp": "^0.2.3",
        "@typescript-eslint/eslint-plugin": "^5.19.0",
        "@typescript-eslint/parser": "^5.19.0",
        "esbuild": "^0.14.42",
        "eslint": "^8.13.0",
        "mocha": "^9.2.1",
        "typescript": "^4.7.2",
        "vsce": "^2.11.0"
    },
    "dependencies": {
        "@types/vscode": "^1.67.0",
        "jakt-lsp-server": "file:server",
        "lsp-sample-client": "file:client"
    }
}

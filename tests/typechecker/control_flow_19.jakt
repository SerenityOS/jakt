/// Expect:
/// - output: "PASS\n"

function test(first: i64) -> String {
    loop {
        if first == 1 {
            break // Always transfer control (can break)
        } else {
            // Doing other stuff
        }

        return "NOT PASSED" // This should be reachable (in case first != 1)
    }

    return "PASS" // This should be reachable (in case first == 1)
}

function main() {
    println("{}", test(first: 1))
}

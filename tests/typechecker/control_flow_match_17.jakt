/// Expect:
/// - output: "PASS\n"

fn test(first: i64, second: i64) -> String {
    loop {
        match first {
            1 => {
                // Always transfer control (can break)
                break
            }
            else => {
                // Partially always return (can't break)
                if second == 2 {
                    return "NOT PASSED"
                }
            }
        }
    }

    return "PASS" // This should be reachable (in case first == 1)
}

fn main() {
    println("{}", test(first: 1, second: 0))
}

/// Expect:
/// - error: "Unreachable code"

function test() -> i64 {
    let x = 2

    loop {
        if x == 2 {
            // Always transfer control (can't break)
            continue
        } else {
            // Partially always return (can't break)
            if x == 3 {
                return 1
            }
        }
    }

    // This should not be reachable
    println("NOT PASSED")
    return 1
}

function main() {
    test()
}

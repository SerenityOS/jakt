/// Expect:
/// - output: "PASS\n"

function test() -> i64 {
    let x = 2

    loop {
        if x == 2 {

            // Partially always transfer control
            if x == 2 {

                // Partially transfer control (can break)
                if x == 2 {
                    break
                }

                continue
            }
        } else {
            // Always return
            return 1
        }
    }

    // This should be reachable
    println("PASS")
    return 1
}

function main() {
    test()
}

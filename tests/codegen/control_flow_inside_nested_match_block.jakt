/// Expect:
/// - output: "OK\n"

function test_continue() -> bool {
    let mutable break_out = false
    while not break_out {
        match 10 {
            10 => {
                match 15 {
                    16 => { }
                    else => { 
                        break_out = true
                        continue
                    }
                }
            }
            else => {}
        }
        println("test_continue: must be unreachable")
        return false
    }
    return true
}


function test_break() -> bool {
    loop {
        match 10 {
            10 => {
                match 15 {
                    15 => { break }
                    else => {}
                }
            }
            else => {}
        }
        println("test_break: must be unreachable")
        return false
    }
    return true
}



function main() {
    if test_break() and test_continue() {
        println("OK")
    } else {
        println("Something happened. Check above log and codegen code.")
    }

}

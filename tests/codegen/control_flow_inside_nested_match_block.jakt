/// Expect:
/// - output: "OK\n"

fn test_continue() -> bool {
    mut break_out = false
    while not break_out {
        match 10 {
            10 => {
                match 15 {
                    16 => { }
                    else => { 
                        break_out = true
                        continue
                    }
                }
            }
            else => {}
        }
    }
    return true
}


fn test_break() -> bool {
    loop {
        match 10 {
            10 => {
                match 15 {
                    15 => { break }
                    else => {}
                }
            }
            else => {}
        }
    }
    return true
}



fn main() {
    if test_break() and test_continue() {
        println("OK")
    } else {
        println("Something happened. Check above log and codegen code.")
    }
}
